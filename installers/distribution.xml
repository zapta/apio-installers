<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>xMyApp Installer</title>
    <background file="background.png" scaling="proportional"/>
    
    <options customize="never" require-scripts="false" rootVolumeOnly="true"/>

    <domains enable_anywhere="true" enable_localSystem="true" enable_currentUserHome="false"/>

    <conclusion file="conclusion.html" mime-type="text/html" />

    <pkg-ref id="com.example.myapp"/>

    <choices-outline>
        <line choice="default"/>
    </choices-outline>

    <choice id="default" visible="false" start_selected="true" start_enabled="true">
        <pkg-ref id="com.example.myapp"/>
    </choice>

    <pkg-ref id="com.example.myapp" version="1.0">
        MyAppComponent.pkg
    </pkg-ref>


</installer-gui-script>
